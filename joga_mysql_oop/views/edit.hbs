<h1>Edit Article</h1>

<form action="/article/edit/{{article.id}}" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="{{article.name}}" required>

    <label for="slug">Slug:</label>
    <input type="text" name="slug" id="slug" value="{{article.slug}}" required>

    <label for="image">Image URL:</label>
    <input type="text" name="image" id="image" value="{{article.image}}">

    <label for="body">Body:</label>
    <textarea name="body" id="body" required>{{article.body}}</textarea>

    <button type="submit">Update Article</button>
</form>